-- AlippHUB - Full Custom WindUI (Mirip RullzsyHUB)
-- Load Example.lua dulu biar UI base muncul kosong, trus kita isi full

local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/refs/heads/main/Example.lua"))()

-- === CONFIG ALIPPHUB ===
local Config = {
    Name = "AlippHUB",
    Discord = "https://discord.gg/alipphub",  -- Ganti link Discord kamu
    ValidKeys = {"alippvip123", "AlippHub2025", "freekey2025"}  -- Ganti key kamu
}

local function isValidKey(key)
    for _, v in pairs(Config.ValidKeys) do
        if key == v then return true end
    end
    return false
end

-- Clear default tabs biar kosong dulu
WindUI.Tabs = {}  -- Kosongin semua tab default

-- === KEY SYSTEM ===
local unlocked = false

local AuthTab = WindUI:AddTab("Authentication")
local AuthSec = AuthTab:AddSection("Key System")

local keyInput = ""
AuthSec:AddInput("Input Key", function(text)
    keyInput = text
end)

AuthSec:AddButton("Verify Key", function()
    if keyInput == "" then
        WindUI:Notify("AlippHUB", "Masukkan key dulu dong!", 4)
        return
    end
    if isValidKey(keyInput) then
        unlocked = true
        WindUI:Notify("AlippHUB", "Key valid! Semua fitur unlocked ðŸ”¥", 6)
        -- Unhide & buat semua tab
        CreateAllTabs()
    else
        WindUI:Notify("AlippHUB", "Key salah bro, coba lagi atau beli baru!", 5)
    end
end)

AuthSec:AddLabel("Butuh key? Join Discord & hubungi admin")
AuthSec:AddLabel(Config.Discord)

-- === FUNGSI BUAT SEMUA TAB (DIPANGGIL SETELAH KEY VALID) ===
function CreateAllTabs()
    -- Auto Walk Tab (utama seperti screenshot)
    local AutoTab = WindUI:AddTab("Auto Walk")

    -- FPS Booster
    local fpsSec = AutoTab:AddSection("FPS Booster")
    fpsSec:AddToggle("Activate FPS Booster", false, function(state)
        settings().Rendering.QualityLevel = state and 1 or 10
    end)

    -- Nametag Menu
    local nameSec = AutoTab:AddSection("Nametag Menu")
    nameSec:AddToggle("Hide Nametag", false, function(state)
        -- Logic hide nametag semua player (tambahkan sendiri kalau mau)
    end)

    -- Walk Speed Menu
    local walkSec = AutoTab:AddSection("Walk Speed Menu")
    walkSec:AddToggle("Enable Walk Speed", false, function(state)
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = state and 100 or 16
        end
    end)
    walkSec:AddSlider("Set Walk Speed", 16, 300, 16, function(val)
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = val
        end
    end)

    -- Keybind & Setting Auto Walk
    local keybindSec = AutoTab:AddSection("Keybind (PC)")
    keybindSec:AddKeybind("Play/Stop Keybind", Enum.KeyCode.F, function() print("Auto Walk toggled") end)
    keybindSec:AddKeybind("Flip/Rotate Keybind", Enum.KeyCode.R, function() print("Flip/Rotate") end)

    local settingSec = AutoTab:AddSection("Setting")
    settingSec:AddToggle("Enable Loop", false)
    settingSec:AddToggle("Auto Respawn", false)
    settingSec:AddToggle("Enable God Mode", false, function(state)
        if state and game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.Health = math.huge
        end
    end)

    -- Credits Tab
    local CredTab = WindUI:AddTab("Credits")
    local credSec = CredTab:AddSection("Special Thanks")
    credSec:AddLabel("UI Library: WindUI")
    credSec:AddLabel("Script by: Alipp")
    credSec:AddLabel("Community: AlippHUB")

    -- Bypass Tab
    local BypassTab = WindUI:AddTab("Bypass")
    local bypassSec = BypassTab:AddSection("Bypass Features")
    bypassSec:AddToggle("Bypass Admin Detection", false)
    bypassSec:AddToggle("Bypass AFK", false)
    bypassSec:AddButton("AUTO CLICKER | PC")
    bypassSec:AddButton("AUTO CLICKER | ANDROID")

    -- Hide Menu Tab
    local HideTab = WindUI:AddTab("Hide Menu")
    local openSec = HideTab:AddSection("Open Menu (PC)")
    openSec:AddLabel("Default key: P")
    openSec:AddKeybind("Toggle Menu", Enum.KeyCode.P, function()
        WindUI:Toggle()
    end)

    local themeSec = HideTab:AddSection("Themes UI")
    themeSec:AddDropdown("Preset Themes", {"Crimson", "Dark", "White", "Purple", "Blue"}, "Crimson", function(choice)
        WindUI:ChangeTheme(choice)
    end)

    -- Tab lain (kosongin dulu atau tambah fitur)
    WindUI:AddTab("Account")
    WindUI:AddTab("Copy Avatar")
    WindUI:AddTab("Animation")
    WindUI:AddTab("Skybox")
    WindUI:AddTab("Player Menu")
    WindUI:AddTab("Social Media")
    WindUI:AddTab("Settings")

    -- Update title
    WindUI.Window:SetTitle(Config.Name .. " | Auto Walk")
end

-- Notif awal
WindUI:Notify("AlippHUB", "Masukkan key valid untuk unlock semua fitur premium!", 10)
