-- AlippHUB | Auto Walk VIP - FINAL WORK (Tab Hide/Show Correct)
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

local CONFIG = {
    HubName = "AlippHUB",
    Subtitle = "Auto Walk",
    Discord = "dsc.gg/alipphub",
    ValidKeys = {"TESTKEY123", "DEMO2024", "RULLZSY2024", "alippvip123"} -- Ganti key
}

local player = game.Players.LocalPlayer
local _G = { Verified = false }

local function notify(title, content, duration)
    WindUI:Notify({Title = title, Content = content, Duration = duration or 5})
end

-- Window instant
local Window = WindUI:CreateWindow({
    Title = CONFIG.HubName .. " | Authentication",
    SubTitle = CONFIG.Subtitle,
    Theme = "Dark",  -- Gelap mirip screenshot
    Acrylic = false  -- No loading stuck!
})

-- Buat semua tab
local AuthTab = Window:Tab({Title = "Authentication", Icon = "lock"})

local AutoTab = Window:Tab({Title = "Auto Walk", Icon = "walk"})
local CredTab = Window:Tab({Title = "Credits", Icon = "heart"})
local BypassTab = Window:Tab({Title = "Bypass", Icon = "shield"})
local HideTab = Window:Tab({Title = "Hide Menu", Icon = "eye-off"})
local AccountTab = Window:Tab({Title = "Account", Icon = "user"})
local CopyTab = Window:Tab({Title = "Copy Avatar", Icon = "copy"})
local AnimTab = Window:Tab({Title = "Animation", Icon = "sparkles"})
local SkyTab = Window:Tab({Title = "Skybox", Icon = "cloud"})
local PlayerTab = Window:Tab({Title = "Player Menu", Icon = "users"})
local SocialTab = Window:Tab({Title = "Social Media", Icon = "share"})
local SettingsTab = Window:Tab({Title = "Settings", Icon = "cog"})

-- ISI CONTENT DULU (sebelum hide biar ga empty)
-- Auto Walk content
local fpsSec = AutoTab:Section({Title = "FPS Booster"})
fpsSec:Toggle({Title = "Activate FPS Booster", Default = false, Callback = function(state)
    settings().Rendering.QualityLevel = state and 1 or 10
end})

local nameSec = AutoTab:Section({Title = "Nametag Menu"})
nameSec:Toggle({Title = "Hide Nametag", Default = false})

local walkSec = AutoTab:Section({Title = "Walk Speed Menu"})
walkSec:Toggle({Title = "Enable Walk Speed", Default = false})
walkSec:Slider({Title = "Set Walk Speed", Min = 16, Max = 300, Default = 16})

-- Credits content
CredTab:Section({Title = "Special Thanks"}):Paragraph({Title = "", Content = "UI Library: WindUI\nScript by: Alipp\nCommunity: AlippHUB"})

-- Bypass content
local bypassSec = BypassTab:Section({Title = "Bypass Features"})
bypassSec:Toggle({Title = "Bypass Admin Detection", Default = false})
bypassSec:Toggle({Title = "Bypass AFK", Default = false})
bypassSec:Button({Title = "AUTO CLICKER | PC"})
bypassSec:Button({Title = "AUTO CLICKER | ANDROID"})

-- Hide Menu content
local themeSec = HideTab:Section({Title = "Themes UI"})
themeSec:Dropdown({Title = "Preset Themes", Options = {"Dark", "Light", "Rose", "Blue", "Green"}, Default = "Dark", Callback = function(choice)
    WindUI:ChangeTheme(choice)
end})
HideTab:Section({Title = "Toggle Menu"}):Keybind({Title = "Toggle UI", Default = Enum.KeyCode.P, Callback = function() Window:Minimize() end})

-- Hide semua tab lain
AutoTab:Hide()
CredTab:Hide()
BypassTab:Hide()
HideTab:Hide()
AccountTab:Hide()
CopyTab:Hide()
AnimTab:Hide()
SkyTab:Hide()
PlayerTab:Hide()
SocialTab:Hide()
SettingsTab:Hide()

-- Key system di AuthTab
local keySec = AuthTab:Section({Title = "Key System"})

local statusPara = keySec:Paragraph({Title = "Status", Content = "‚ö†Ô∏è Not Verified - Masukkan key untuk unlock semua fitur"})

keySec:Paragraph({Title = "Information", Content = "Untuk mengakses menu utama, masukkan key/token dari Discord:\nüîó " .. CONFIG.Discord})

local keyInputValue = ""
keySec:Input({Title = "Input Key", Placeholder = "Masukkan key di sini...", Callback = function(text) keyInputValue = text end})

keySec:Button({Title = "Verify Key", Callback = function()
    if keyInputValue == "" then notify("Error", "Masukkan key dulu!", 4) return end
    if table.find(CONFIG.ValidKeys, keyInputValue) then
        _G.Verified = true
        notify("Success", "‚úÖ Key valid! Membuka semua fitur...", 6)
        Window:SetTitle(CONFIG.HubName .. " | Auto Walk")
        statusPara:Set({Title = "üåü VIP VERIFIED üåü", Content = "Selamat datang " .. player.Name .. "!\nNikmati semua fitur premium üî•"})

        -- SHOW SEMUA TAB!
        AutoTab:Show()
        CredTab:Show()
        BypassTab:Show()
        HideTab:Show()
        AccountTab:Show()
        CopyTab:Show()
        AnimTab:Show()
        SkyTab:Show()
        PlayerTab:Show()
        SocialTab:Show()
        SettingsTab:Show()
    else
        notify("Error", "‚ùå Key salah atau tidak valid!", 5)
    end
end})

notify("AlippHUB", "UI ready instant! Masukkan key di tab Authentication.", 8)
