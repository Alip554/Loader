-- AlippHUB - Custom WindUI Full (NO DEFAULT EXAMPLE!)
-- Load CORE library only (bukan example)
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

-- === CONFIG ===
local Config = {
    HubName = "AlippHUB",
    Discord = "https://discord.gg/alipphub",  -- Ganti link kamu
    ValidKeys = {"alippvip123", "Alipp2025", "freealipp"}  -- Ganti key kamu
}

local unlocked = false

local function isValidKey(key)
    for _, v in pairs(Config.ValidKeys) do
        if key == v then return true end
    end
    return false
end

-- === BUAT WINDOW CUSTOM ===
local Window = WindUI:CreateWindow({
    Title = Config.HubName .. " | Loading...",
    SubTitle = "Auto Walk VIP",
    Theme = "Crimson"  -- Mirip screenshot (merah gelap)
})

-- Notif selamat datang
WindUI:Notify("AlippHUB", "Masukkan key untuk unlock semua fitur VIP!", 10)

-- === AUTHENTICATION (MUNcul DULU) ===
local AuthTab = Window:AddTab({ Title = "Authentication", Icon = "lock" })

local AuthSec = AuthTab:AddSection({ Title = "Key System" })

local keyInput = ""
AuthSec:AddInput({
    Title = "Input Key",
    Placeholder = "Masukkan key di sini...",
    Callback = function(text) keyInput = text end
})

AuthSec:AddButton({
    Title = "Verify Key",
    Callback = function()
        if keyInput == "" then
            WindUI:Notify("Warning", "Masukkan key dulu!", 4)
            return
        end
        if isValidKey(keyInput) then
            unlocked = true
            WindUI:Notify("Success!", "Key valid! Fitur VIP terbuka ðŸ”¥", 7)
            Window:SetTitle(Config.HubName .. " | Auto Walk")
            CreateAllFeatures()  -- Buat semua tab & fitur
        else
            WindUI:Notify("Error", "Key invalid! Beli di Discord.", 6)
        end
    end
})

AuthSec:AddLabel({ Title = "Belum punya key?" })
AuthSec:AddLabel({ Title = Config.Discord })

-- === BUAT SEMUA TAB & FITUR SETELAH KEY VALID ===
function CreateAllFeatures()
    -- Auto Walk Tab (fokus utama)
    local AutoTab = Window:AddTab({ Title = "Auto Walk", Icon = "walk" })

    local fpsSec = AutoTab:AddSection({ Title = "FPS Booster" })
    fpsSec:AddToggle({
        Title = "Activate FPS Booster",
        Default = false,
        Callback = function(state)
            settings().Rendering.QualityLevel = state and 1 or 10
        end
    })

    local nameSec = AutoTab:AddSection({ Title = "Nametag Menu" })
    nameSec:AddToggle({ Title = "Hide Nametag", Default = false })

    local walkSec = AutoTab:AddSection({ Title = "Walk Speed Menu" })
    walkSec:AddToggle({
        Title = "Enable Walk Speed",
        Default = false,
        Callback = function(state)
            local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if hum then hum.WalkSpeed = state and 100 or 16 end
        end
    })
    walkSec:AddSlider({
        Title = "Set Walk Speed",
        Min = 16, Max = 300, Default = 16,
        Callback = function(val)
            local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if hum then hum.WalkSpeed = val end
        end
    })

    local keySec = AutoTab:AddSection({ Title = "Keybind (PC)" })
    keySec:AddKeybind({ Title = "Play/Stop Keybind", Default = Enum.KeyCode.F })
    keySec:AddKeybind({ Title = "Flip/Rotate Keybind", Default = Enum.KeyCode.R })

    local setSec = AutoTab:AddSection({ Title = "Setting" })
    setSec:AddToggle({ Title = "Enable Loop", Default = false })
    setSec:AddToggle({ Title = "Auto Respawn", Default = false })
    setSec:AddToggle({
        Title = "Enable God Mode",
        Default = false,
        Callback = function(state)
            local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            if hum and state then hum.Health = math.huge end
        end
    })

    -- Credits
    local CredTab = Window:AddTab({ Title = "Credits", Icon = "heart" })
    CredTab:AddSection({ Title = "Special Thanks" }):AddLabel({ Title = "UI: WindUI\nDev: Alipp\nCommunity: AlippHUB" })

    -- Bypass
    local BypassTab = Window:AddTab({ Title = "Bypass", Icon = "shield" })
    local bypassSec = BypassTab:AddSection({ Title = "Bypass Features" })
    bypassSec:AddToggle({ Title = "Bypass Admin Detection", Default = false })
    bypassSec:AddToggle({ Title = "Bypass AFK", Default = false })
    bypassSec:AddButton({ Title = "AUTO CLICKER | PC" })
    bypassSec:AddButton({ Title = "AUTO CLICKER | ANDROID" })

    -- Hide Menu
    local HideTab = Window:AddTab({ Title = "Hide Menu", Icon = "eye-off" })
    HideTab:AddSection({ Title = "Open Menu (PC)" }):AddLabel({ Title = "Default: P" })
    HideTab:AddSection({ Title = "Toggle Menu" }):AddKeybind({
        Title = "Toggle UI",
        Default = Enum.KeyCode.P,
        Callback = function() Window:Minimize() end
    })
    local themeSec = HideTab:AddSection({ Title = "Themes UI" })
    themeSec:AddDropdown({
        Title = "Preset Themes",
        Options = {"Crimson", "Dark", "White", "Purple", "Blue"},
        Default = "Crimson",
        Callback = function(choice) WindUI:ChangeTheme(choice) end
    })

    -- Tab lain biar sidebar full
    Window:AddTab({ Title = "Account", Icon = "user" })
    Window:AddTab({ Title = "Copy Avatar", Icon = "copy" })
    Window:AddTab({ Title = "Animation", Icon = "sparkles" })
    Window:AddTab({ Title = "Skybox", Icon = "cloud" })
    Window:AddTab({ Title = "Player Menu", Icon = "users" })
    Window:AddTab({ Title = "Social Media", Icon = "share" })
    Window:AddTab({ Title = "Settings", Icon = "cog" })
end
