-- AlippHUB | Auto Walk VIP - FINAL ON-DEMAND TABS (No Empty Tab + Proper Hide)
-- Load core library clean
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

local CONFIG = {
    HubName = "AlippHUB",
    Subtitle = "Auto Walk",
    Discord = "dsc.gg/alipphub",
    ValidKeys = {"TESTKEY123", "DEMO2024", "RULLZSY2024", "alippvip123"} -- Ganti key kamu
}

local _G = { Verified = false }

local function notify(title, msg, dur)
    WindUI:Notify({Title = title, Content = msg, Duration = dur or 4})
end

-- Window clean dengan Acrylic false
local Window = WindUI:CreateWindow({
    Title = CONFIG.HubName .. " | Authentication",
    SubTitle = CONFIG.Subtitle,
    Theme = "Crimson",  -- Merah gelap mirip screenshot
    Acrylic = false  -- Instant load, no stuck!
})

-- Authentication Tab & Key System
local AuthTab = Window:Tab({Title = "Authentication", Icon = "lock"})

local keySec = AuthTab:Section({Title = "Key System"})

local statusPara = keySec:Paragraph({Title = "Status", Content = "Not Verified"})

keySec:Paragraph({Title = "Information", Content = "Masukkan key dari Discord:\n" .. CONFIG.Discord})

local keyInput = ""
keySec:Input({Title = "Input Key", Placeholder = "Masukkan key...", Callback = function(val) keyInput = val end})

keySec:Button({Title = "Verify Key", Callback = function()
    if keyInput == "" then notify("Error", "Masukkan key dulu!", 4) return end
    if table.find(CONFIG.ValidKeys, keyInput) then
        _G.Verified = true
        notify("Success", "Key valid! Membuka semua fitur...", 5)
        Window:SetTitle(CONFIG.HubName .. " | Auto Walk")
        statusPara:Set({Title = "VERIFIED âœ…", Content = "Selamat datang VIP!\nUser: " .. game.Players.LocalPlayer.Name})
        CreateAllFeatures()  -- Buat & tambah semua tab + isi content
    else
        notify("Error", "Key salah!", 5)
    end
end})

-- Fungsi buat semua tab & fitur SETELAH verify (no empty!)
local function CreateAllFeatures()
    -- Auto Walk Tab
    local AutoTab = Window:Tab({Title = "Auto Walk", Icon = "walk"})

    -- FPS Booster
    AutoTab:Section({Title = "FPS Booster"}):Toggle({Title = "Activate FPS Booster", Default = false, Callback = function(state)
        settings().Rendering.QualityLevel = state and 1 or 10
    end})

    -- Nametag Menu
    AutoTab:Section({Title = "Nametag Menu"}):Toggle({Title = "Hide Nametag", Default = false})

    -- Walk Speed Menu
    local walkSec = AutoTab:Section({Title = "Walk Speed Menu"})
    walkSec:Toggle({Title = "Enable Walk Speed", Default = false, Callback = function(state)
        -- Logic enable walk speed dari script kamu
    end})
    walkSec:Slider({Title = "Set Walk Speed", Min = 16, Max = 300, Default = 16, Callback = function(val)
        -- Set speed
    end})

    -- Tambah section lain: Keybind (PC), Setting (Loop, Respawn, God Mode), dll dari file kamu

    -- Credits Tab
    local CredTab = Window:Tab({Title = "Credits", Icon = "heart"})
    CredTab:Section({Title = "Special Thanks"}):Paragraph({Title = "", Content = "UI: WindUI\nDev: Alipp\nCommunity: AlippHUB"})

    -- Bypass Tab
    local BypassTab = Window:Tab({Title = "Bypass", Icon = "shield"})
    BypassTab:Section({Title = "Bypass Features"}):Toggle({Title = "Bypass Admin Detection", Default = false})
    BypassTab:Section({Title = ""}):Toggle({Title = "Bypass AFK", Default = false})
    BypassTab:Section({Title = ""}):Button({Title = "AUTO CLICKER | PC"})
    BypassTab:Section({Title = ""}):Button({Title = "AUTO CLICKER | ANDROID"})

    -- Hide Menu Tab
    local HideTab = Window:Tab({Title = "Hide Menu", Icon = "eye-off"})
    HideTab:Section({Title = "Open Menu (PC)"}):Label({Title = "Default: P"})
    HideTab:Section({Title = "Toggle Menu"}):Keybind({Title = "Toggle UI", Default = Enum.KeyCode.P, Callback = function() Window:Minimize() end})
    HideTab:Section({Title = "Themes UI"}):Dropdown({Title = "Preset Themes", Options = {"Crimson", "Dark", "White", "Purple", "Blue"}, Default = "Crimson", Callback = function(choice)
        WindUI:ChangeTheme(choice)
    end})

    -- Tab lain (kosong atau isi sesuai kebutuhan)
    Window:Tab({Title = "Account", Icon = "user"})
    Window:Tab({Title = "Copy Avatar", Icon = "copy"})
    Window:Tab({Title = "Animation", Icon = "sparkles"})
    Window:Tab({Title = "Skybox", Icon = "cloud"})
    Window:Tab({Title = "Player Menu", Icon = "users"})
    Window:Tab({Title = "Social Media", Icon = "share"})
    Window:Tab({Title = "Settings", Icon = "settings"})

    notify("Unlocked", "Semua tab & fitur loaded!", 4)
end

notify("AlippHUB", "UI ready! Masukkan key di Authentication.", 6)
