-- AlippHUB - Full Featured WindUI Script (FIXED - UI MUNcul!)
-- Library load yang benar:
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/refs/heads/main/Example.lua"))()

-- === CONFIG ===
local Config = {
    Name = "AlippHUB",
    Discord = "https://discord.gg/alipphub",  -- Ganti link Discord kamu
    ValidKeys = {
        "alippvip123",
        "AlippHub2025",
        "freealippkey"
        -- Tambah key lain di sini
    }
}

local function CheckKey(key)
    for _, v in pairs(Config.ValidKeys) do
        if key == v then return true end
    end
    return false
end

-- === WINDOW ===
local Window = WindUI:CreateWindow({
    Title = Config.Name .. " | Loading...",
    SubTitle = "by Alipp",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Crimson",  -- Default theme crimson seperti screenshot
    MinimizeKey = Enum.KeyCode.LeftControl
})

-- === VARIABLES ===
local FeaturesUnlocked = false
local Tabs = {}

-- Notif awal
WindUI:Notify("AlippHUB", "Masukkan key untuk unlock semua fitur!", 8)

-- === AUTHENTICATION TAB (SELALU MUNcul) ===
Tabs.Authentication = Window:AddTab({ Title = "Authentication", Icon = "lock" })

local AuthGroup = Tabs.Authentication:AddSection("Key System")

local KeyBox = AuthGroup:AddInput({
    Title = "Input Key",
    Placeholder = "Masukkan key di sini...",
    Callback = function() end
})

AuthGroup:AddButton({
    Title = "Verify Key",
    Callback = function()
        local key = KeyBox.Value
        if key == "" then
            WindUI:Notify("Warning", "Masukkan key dulu bro!", 4)
            return
        end
        
        if CheckKey(key) then
            FeaturesUnlocked = true
            WindUI:Notify("Success!", "Key valid! Semua fitur terbuka ðŸ”¥", 6)
            Window:SetTitle(Config.Name .. " | Auto Walk")
            
            -- Unhide semua tab lain
            for name, tab in pairs(Tabs) do
                if name ~= "Authentication" then
                    tab:Show()
                end
            end
        else
            WindUI:Notify("Error", "Key salah atau expired!", 5)
        end
    end
})

AuthGroup:AddLabel("Ga punya key? Hubungi @alipp di Discord")
AuthGroup:AddLabel(Config.Discord)

-- === FUNGSI BUAT TAB HIDDEN ===
local function AddHiddenTab(title, icon)
    local tab = Window:AddTab({ Title = title, Icon = icon or "settings" })
    tab:Hide()  -- Awalnya disembunyiin
    return tab
end

-- Semua tab lain
Tabs.AutoWalk = AddHiddenTab("Auto Walk", "walk")
Tabs.Credits = AddHiddenTab("Credits", "heart")
Tabs.Bypass = AddHiddenTab("Bypass", "shield")
Tabs.CopyAvatar = AddHiddenTab("Copy Avatar", "user")
Tabs.Animation = AddHiddenTab("Animation", "sparkles")
Tabs.Skybox = AddHiddenTab("Skybox", "cloud")
Tabs.PlayerMenu = AddHiddenTab("Player Menu", "users")
Tabs.SocialMedia = AddHiddenTab("Social Media", "share")
Tabs.Settings = AddHiddenTab("Settings", "settings")
Tabs.HideMenu = AddHiddenTab("Hide Menu", "eye-off")

-- Contoh isi tab Auto Walk (mirip screenshot)
local WalkGroup = Tabs.AutoWalk:AddSection("Walk Speed Menu")
WalkGroup:AddToggle({
    Title = "Enable Walk Speed",
    Default = false,
    Callback = function(v)
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v and 100 or 16
        end
    end
})
WalkGroup:AddSlider({
    Title = "Set Walk Speed",
    Min = 16, Max = 300, Default = 16,
    Callback = function(v)
        if game.Players.LocalPlayer.Character then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v
        end
    end
})

local NametagGroup = Tabs.AutoWalk:AddSection("Nametag Menu")
NametagGroup:AddToggle({ Title = "Hide Nametag", Default = false, Callback = function() end })

local FPSGroup = Tabs.AutoWalk:AddSection("FPS Booster")
FPSGroup:AddToggle({
    Title = "Activate FPS Booster",
    Default = false,
    Callback = function(v)
        settings().Rendering.QualityLevel = v and 1 or 10
    end
})

-- Credits
Tabs.Credits:AddSection("Special Thanks"):AddLabel("UI Library: WindUI\nScript: Alipp\nCommunity: AlippHUB")

-- Hide Menu (Toggle UI)
Tabs.HideMenu:AddSection("Toggle Menu"):AddKeybind({
    Title = "Toggle UI Keybind",
    Default = Enum.KeyCode.P,
    Callback = function() Window:Minimize() end
})

-- Themes
local ThemeGroup = Tabs.HideMenu:AddSection("Themes UI")
ThemeGroup:AddDropdown({
    Title = "Preset Themes",
    Options = {"Crimson", "Dark", "White", "Purple", "Blue"},
    Default = "Crimson",
    Callback = function(choice)
        WindUI:ChangeTheme(choice)
    end
})

-- Tambahin fitur lain sesuai screenshot (Bypass, Auto Clicker, dll) nanti kalau UI udah muncul
