-- AlippHUB | Auto Walk VIP - FINAL FIX (Proper Hide Tabs + No Loading)
-- Acrylic disabled + Correct tab hide/show

local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

local CONFIG = {
    HubName = "AlippHUB",
    Subtitle = "Auto Walk",
    Discord = "dsc.gg/alipphub",
    ValidKeys = {"TESTKEY123", "DEMO2024", "RULLZSY2024", "alippvip123"} -- Ganti key kamu
}

local Players = game:GetService("Players")
local player = Players.LocalPlayer

local _G = {
    Verified = false
}

local hiddenTabs = {} -- Simpan tab objects yang di-hide

local function notify(title, msg, dur)
    WindUI:Notify({Title = title, Content = msg, Duration = dur or 4})
end

-- Window dengan Acrylic false biar INSTANT muncul
local Window = WindUI:CreateWindow({
    Title = CONFIG.HubName .. " | Loading...",
    SubTitle = CONFIG.Subtitle,
    Theme = "Dark", -- Crimson ga ada, Dark mirip gelap merah
    Acrylic = false -- INI FIX LOADING STUCK!
})

-- AUTHENTICATION TAB - SELALU VISIBLE DARI AWAL
local AuthTab = Window:Tab({
    Title = "Authentication",
    Icon = "lock"
})

local authSection = AuthTab:Section({Title = "Key System"})

local statusPara = authSection:Paragraph({
    Title = "Status",
    Content = "Not Verified\nMasukkan key untuk unlock semua fitur"
})

authSection:Paragraph({
    Title = "Info",
    Content = "Beli key di Discord:\n" .. CONFIG.Discord
})

local keyValue = ""
authSection:Input({
    Title = "Input Key",
    Placeholder = "Masukkan key...",
    Callback = function(val) keyValue = val end
})

authSection:Button({
    Title = "Verify Key",
    Callback = function()
        if keyValue == "" then
            notify("Error", "Masukkan key dulu!", 4)
            return
        end
        if table.find(CONFIG.ValidKeys, keyValue) then
            _G.Verified = true
            notify("Success", "Key valid! Membuka semua fitur...", 5)
            Window:SetTitle(CONFIG.HubName .. " | Auto Walk")
            -- Unhide semua tab
            for _, tabInfo in pairs(hiddenTabs) do
                tabInfo.Button.Visible = true
                tabInfo.Container.Visible = true
            end
            -- Update status auth
            statusPara:Set({
                Title = "ðŸŒŸ VIP VERIFIED ðŸŒŸ",
                Content = "Selamat datang " .. player.Name .. "!\nSemua fitur premium terbuka."
            })
        else
            notify("Error", "Key salah!", 5)
        end
    end
})

-- BUAT SEMUA TAB LAIN & LANGSUNG HIDE
local function createHiddenTab(title, icon)
    local tab = Window:Tab({Title = title, Icon = icon or "settings"})
    -- Hide langsung
    tab.Button.Visible = false
    tab.Container.Visible = false
    table.insert(hiddenTabs, {Button = tab.Button, Container = tab.Container})
    return tab
end

-- Auto Walk Tab (utama)
local AutoTab = createHiddenTab("Auto Walk", "walk")

local fpsSec = AutoTab:Section({Title = "FPS Booster"})
fpsSec:Toggle({Title = "Activate FPS Booster", Default = false, Callback = function(state)
    settings().Rendering.QualityLevel = state and 1 or 10
end})

local nameSec = AutoTab:Section({Title = "Nametag Menu"})
nameSec:Toggle({Title = "Hide Nametag", Default = false})

local walkSec = AutoTab:Section({Title = "Walk Speed Menu"})
walkSec:Toggle({Title = "Enable Walk Speed", Default = false})
walkSec:Slider({Title = "Set Walk Speed", Min = 16, Max = 300, Default = 16})

-- Tambahin section lain (Keybind, Setting, God Mode, dll) di sini

-- Credits Tab
createHiddenTab("Credits", "heart")

-- Bypass Tab
createHiddenTab("Bypass", "shield")

-- Hide Menu Tab
local HideTab = createHiddenTab("Hide Menu", "eye-off")
HideTab:Section({Title = "Themes UI"}):Dropdown({
    Title = "Preset Themes",
    Options = {"Dark", "Light", "Blue", "Purple"},
    Default = "Dark"
})

-- Tambahin tab lain sesuai screenshot kamu
createHiddenTab("Account")
createHiddenTab("Copy Avatar")
createHiddenTab("Animation")
createHiddenTab("Skybox")
createHiddenTab("Player Menu")
createHiddenTab("Social Media")
createHiddenTab("Settings")

notify("AlippHUB", "UI loaded! Masukkan key di tab Authentication.", 6)
