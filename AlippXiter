-- AlippHUB Final - Fast Load (No Infinite Loading)
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

local Config = {
    HubName = "AlippHUB",
    Discord = "https://discord.gg/alipphub",
    ValidKeys = {"alippvip123", "Alipp2025", "freealipp"}
}

local unlocked = false
local function isValidKey(key) for _, v in pairs(Config.ValidKeys) do if key == v then return true end end return false end

local Window = WindUI:CreateWindow({
    Title = Config.HubName .. " | Loading...",
    SubTitle = "Auto Walk VIP",
    Theme = "Crimson",
    Acrylic = false  -- Ini kunci biar ga loading lama!
})

WindUI:Notify("AlippHUB", "Fast load enabled! Masukkan key untuk VIP features.", 8)

-- Authentication Tab
local AuthTab = Window:AddTab({ Title = "Authentication", Icon = "lock" })
local AuthSec = AuthTab:AddSection({ Title = "Key System" })
local keyInput = ""
AuthSec:AddInput({ Title = "Input Key", Placeholder = "Masukkan key...", Callback = function(t) keyInput = t end })
AuthSec:AddButton({ Title = "Verify Key", Callback = function()
    if keyInput == "" then WindUI:Notify("Warning", "Input key dulu!", 4) return end
    if isValidKey(keyInput) then
        unlocked = true
        WindUI:Notify("Success!", "Key valid! VIP unlocked ðŸ”¥", 7)
        Window:SetTitle(Config.HubName .. " | Auto Walk")
        CreateAllFeatures()
    else
        WindUI:Notify("Error", "Key salah! Join Discord buat beli.", 6)
    end
end })
AuthSec:AddLabel({ Title = "Butuh key? Join Discord:" })
AuthSec:AddLabel({ Title = Config.Discord })

function CreateAllFeatures()
    -- Isi semua tab seperti sebelumnya (sama persis)
    -- (Aku ga ulang full code biar ga panjang, copy dari script sebelumnya)
    -- Tambahin semua section Auto Walk, Credits, Bypass, Hide Menu, dll.
end
